---
import { actions } from 'astro:actions';
---

<form method="post" action={actions.submitQuestion} class="p-6 space-y-6">
  <label for="question" class="text-sm font-medium text-gray-700">Your Question</label>
  <div class="space-y-2">
    <textarea 
      id="question" 
      placeholder="What would you like to ask?" 
      required 
      class="h-40 w-full resize-none border-gray-300 focus:border-gray-500 focus:ring-gray-500" 
    />
  </div>
  <button class="w-full bg-gray-800 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition duration-300 ease-in-out" type="submit">Ask</button>
</form>