---
import Layout from '../layouts/default.astro';
---

<Layout>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-blue-50">
    <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.5))] -z-10" />
    <div class="max-w-md w-full space-y-8 p-10 bg-white rounded-xl shadow-lg">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>        
        <h2 class="mt-6 tex-xl md:text-3xl font-extrabold text-gray-900">Question Submitted!</h2>
        <p class="mt-2 text-sm text-gray-600">
          Thank you for your question. It will be answered soon.
        </p>
      </div>
      <div class="mt-8 space-y-6">
        <div class="text-center">
          <a
            href="/"
            class="group inline-flex items-center justify-center rounded-full bg-gray-800 hover:bg-gray-700 px-4 py-2 text-xs sm:text-sm font-semibold text-white hover:text-slate-100 transition-colors"
          >
            Ask Another Question
            <svg class="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
            </svg>
        </a>
        </div>
      </div>
    </div>
  </div>
</Layout>